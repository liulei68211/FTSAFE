<?xml version="1.0" encoding="utf-8" ?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
  <!--//这里是Linearlayout布局的背景颜色-->
  <solid android:color="#fff" />
  <!--//这里是设置边框线的粗细和颜色-->
  <stroke
      android:width="1.5dp"
      android:color="#EDEDED" />
  <padding
      android:bottom="4dp"
      android:left="4dp"
      android:right="4dp"
      android:top="4dp" />
  <!--//角的话，里边有参数可以单独设置-->
  <corners android:radius="12dp" />
</shape>